<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Button at Top Left -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Title for Manage Jobs -->
    <TextView
        android:id="@+id/manage_jobs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Jobs"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button to add a job -->
    <Button
        android:id="@+id/add_job_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Job"
        app:layout_constraintTop_toBottomOf="@id/manage_jobs_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- TextView to display the posted job details -->
    <TextView
        android:id="@+id/posted_job_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Posted Job Details will appear here"
        app:layout_constraintTop_toBottomOf="@id/add_job_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
