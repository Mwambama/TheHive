<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="16dp"
    android:background="@android:color/white"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Job Description -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Job Summary -->
        <TextView
            android:id="@+id/summaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Summary"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Salary -->
        <TextView
            android:id="@+id/salaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Job Type -->
        <TextView
            android:id="@+id/jobTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Type"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Minimum GPA -->
        <TextView
            android:id="@+id/minimumGpaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum GPA"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Job Start Date -->
        <TextView
            android:id="@+id/jobStartTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Start Date"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Application Start Date -->
        <TextView
            android:id="@+id/applicationStartTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Start Date"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Application End Date -->
        <TextView
            android:id="@+id/applicationEndTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application End Date"
            android:textSize="14sp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="4dp"/>

        <!-- Buttons for update and delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/updateButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_update"
                android:contentDescription="Update Job"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@android:color/black"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Job"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@android:color/holo_red_dark"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
