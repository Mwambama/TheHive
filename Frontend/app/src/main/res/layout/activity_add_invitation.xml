<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".company_user.invitations.AddInvitationActivity">

    <!-- Fields to input email -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Message Field -->
    <EditText
        android:id="@+id/messageField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Message"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:minLines="2"
        app:layout_constraintTop_toBottomOf="@id/emailField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Send Invitation Button -->
    <Button
        android:id="@+id/sendInvitationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Invitation"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/messageField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Delete Invitation Button -->
    <Button
        android:id="@+id/deleteInvitationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Invitation"
        android:backgroundTint="#FF5252"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/sendInvitationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Get Invitations Button -->
    <Button
        android:id="@+id/getInvitationsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get Invitations"
        android:backgroundTint="#03A9F4"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/deleteInvitationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Update Invitation Button -->
    <Button
        android:id="@+id/updateInvitationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update Invitation"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/getInvitationsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- TextView to display responses -->
    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Response will be shown here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:background="#EFEFEF"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/updateInvitationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- ListView for displaying invitations -->
    <ListView
        android:id="@+id/invitationsListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/responseTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>