<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Sent Message Container -->
    <LinearLayout
        android:id="@+id/sentMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Sent Reply TextView -->
        <TextView
            android:id="@+id/sentReplyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:background="#e0e0e0"
            android:padding="4dp"
            android:visibility="gone" />

        <!-- Sent Message TextView -->
        <TextView
            android:id="@+id/sentMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_sent"
            android:padding="8dp"
            android:textColor="@android:color/white" />

        <!-- Sent Timestamp TextView -->
        <TextView
            android:id="@+id/sentTimestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Received Message Container -->
    <LinearLayout
        android:id="@+id/receivedMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Received Reply TextView -->
        <TextView
            android:id="@+id/receivedReplyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:background="#e0e0e0"
            android:padding="4dp"
            android:visibility="gone" />

        <!-- Received Message TextView -->
        <TextView
            android:id="@+id/receivedMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_received"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <!-- Received Timestamp TextView -->
        <TextView
            android:id="@+id/receivedTimestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#888888" />
    </LinearLayout>
</LinearLayout>