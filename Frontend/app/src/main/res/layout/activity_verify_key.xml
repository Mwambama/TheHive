<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/verifyKeyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Verification Key"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Key Field -->
    <EditText
        android:id="@+id/keyField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter the 4-letter key"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/verifyKeyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Verify Key Button -->
    <Button
        android:id="@+id/verifyKeyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verify Key"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/keyField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>