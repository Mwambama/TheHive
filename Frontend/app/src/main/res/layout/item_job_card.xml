<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jobCard"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="24dp">

<!-- Job Title -->
<TextView
    android:id="@+id/jobTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Job Title"
    android:textColor="#333333"
    android:textSize="26sp"
    android:textStyle="bold"
    android:ellipsize="end"
    android:maxLines="1"
    android:layout_marginBottom="12dp" />

<!-- Job Description -->
<TextView
    android:id="@+id/description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Job Description"
    android:textColor="#555555"
    android:textSize="16sp"
    android:ellipsize="end"
    android:maxLines="4"
    android:layout_marginBottom="16dp" />

<!-- Salary and Job Type Container -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp">

    <!-- Salary -->
    <TextView
        android:id="@+id/salary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Salary: $0.00"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginEnd="8dp" />

    <!-- Job Type -->
    <TextView
        android:id="@+id/jobType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Type: Internship"
        android:textColor="#333333"
        android:textSize="16sp" />
</LinearLayout>

<!-- Additional Information Container -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Minimum GPA -->
    <TextView
        android:id="@+id/minimumGpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum GPA: 0.00"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Job Start Date -->
    <TextView
        android:id="@+id/jobStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Start Date: YYYY-MM-DD"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Application Dates -->
    <TextView
        android:id="@+id/applicationStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application Start: YYYY-MM-DD"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/applicationEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application End: YYYY-MM-DD"
        android:textColor="#555555"
        android:textSize="16sp" />
</LinearLayout>

<!-- Swipe Hint -->
<TextView
    android:id="@+id/swipeHint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Swipe right to apply, swipe left to skip"
    android:textColor="#888888"
    android:textSize="14sp"
    android:gravity="center"
    android:layout_marginTop="16dp" />
</LinearLayout>
    </androidx.cardview.widget.CardView>
