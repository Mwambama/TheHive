<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="8dp" />

        <!-- Job Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textColor="#555555"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginBottom="12dp" />

        <!-- Salary and Job Type Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Salary -->
            <TextView
                android:id="@+id/salary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salary: $0.00"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <!-- Job Type -->
            <TextView
                android:id="@+id/jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Type: Internship"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Additional Information Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Minimum GPA -->
            <TextView
                android:id="@+id/minimumGpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimum GPA: 0.00"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <!-- Job Start Date -->
            <TextView
                android:id="@+id/jobStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Start Date: YYYY-MM-DD"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <!-- Application Dates -->
            <TextView
                android:id="@+id/applicationStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application Start: YYYY-MM-DD"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/applicationEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application End: YYYY-MM-DD"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
