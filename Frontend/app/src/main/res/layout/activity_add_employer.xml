<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Arrow Icon -->
        <ImageButton
            android:id="@+id/backArrowIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Back Arrow"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#333333" />

        <!-- Title -->
        <TextView
            android:id="@+id/addEmployerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Employer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/backArrowIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

        <!-- Name Field -->
        <EditText
            android:id="@+id/nameField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/addEmployerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/emailField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/nameField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Phone Field -->
        <EditText
            android:id="@+id/phoneField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/emailField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Street Field -->
        <EditText
            android:id="@+id/streetField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Street"
            app:layout_constraintTop_toBottomOf="@id/phoneField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- City Field -->
        <EditText
            android:id="@+id/cityField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="City"
            app:layout_constraintTop_toBottomOf="@id/streetField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- State Field -->
        <EditText
            android:id="@+id/stateField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="State"
            app:layout_constraintTop_toBottomOf="@id/cityField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/zipField"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

        <!-- Zip Field -->
        <EditText
            android:id="@+id/zipField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Zip Code"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/cityField"
            app:layout_constraintStart_toEndOf="@id/stateField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" />

        <!-- Add Employer Button -->
        <Button
            android:id="@+id/addEmployerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Employer"
            android:textColor="@android:color/white"
            android:backgroundTint="#6200EE"
            app:layout_constraintTop_toBottomOf="@id/zipField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>