<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".company_user.CompanyActivity">

    <!-- Back Arrow Icon at the top left -->
    <ImageButton
        android:id="@+id/backArrowIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back Arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#333333" />

    <!-- Top section for company title and logo -->
    <TextView
        android:id="@+id/companyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{Company}"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/company_logo_placeholder"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/companyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter" />

    <!-- Tab buttons for switching between Employers and Invitations -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/companyLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnEmployers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employers"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B67FA1"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnInvitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitations"
            android:textColor="#B67FA1"
            android:backgroundTint="#E5E5E5" />
    </LinearLayout>

    <!-- Company general information section styled as a card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/companyInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/companyInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company General Information"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/companyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/companyPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/companyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom navigation section -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#A9A9A9"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Manage Employers Icon -->
        <ImageButton
            android:id="@+id/manageEmployersIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:contentDescription="Manage Employers"
            android:focusable="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_manage_employers"
            app:tint="#333333" />

        <!-- Main User Page Icon -->
        <ImageButton
            android:id="@+id/mainUserPageIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:contentDescription="Main User Page"
            android:focusable="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile"
            app:tint="#333333" />

        <!-- Manage Invitations Icon -->
        <ImageButton
            android:id="@+id/manageInvitationsIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:contentDescription="Manage Invitations"
            android:focusable="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_manage_invitations"
            app:tint="#333333" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
