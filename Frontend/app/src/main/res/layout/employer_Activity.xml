
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Company Information -->
        <EditText
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name" />

        <EditText
            android:id="@+id/company_logo_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Logo URL" />

        <EditText
            android:id="@+id/company_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Description" />

        <EditText
            android:id="@+id/industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Industry" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location" />

        <EditText
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website" />

        <!-- Recruiter Information -->
        <EditText
            android:id="@+id/recruiter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recruiter Name" />

        <EditText
            android:id="@+id/contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Email" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number" />

        <!-- Social Media Links -->
        <EditText
            android:id="@+id/social_media_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Social Media Links (comma-separated)" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/save_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile" />
    </LinearLayout>
</ScrollView>
