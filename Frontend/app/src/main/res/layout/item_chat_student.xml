<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job Title TextView -->
        <TextView
            android:id="@+id/jobTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <!-- Unread Messages Badge -->
        <TextView
            android:id="@+id/unreadMessagesBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center" />

        <!-- Last Message Preview -->
        <TextView
            android:id="@+id/lastMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last message preview..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/jobTitleTextView"
            android:layout_marginTop="4dp" />

        <!-- Last Message Time -->
        <TextView
            android:id="@+id/lastMessageTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_below="@id/lastMessageTextView"
            android:layout_marginTop="2dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
