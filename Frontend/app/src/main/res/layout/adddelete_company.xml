<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".company_user.handleEmployers.CompanyActivityApi">

    <!-- Back Arrow Icon -->
    <ImageButton
        android:id="@+id/backArrowIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back Arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        app:tint="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Guidelines for Left and Right Padding -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical" />

    <!-- Form Fields -->
    <EditText
        android:id="@+id/nameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Name"
        android:padding="12dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/nameField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/phoneField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/emailField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/streetField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Street"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/phoneField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/cityField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="City"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/streetField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/stateField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="State"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/cityField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toStartOf="@id/zipField"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/zipField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/cityField"
        app:layout_constraintStart_toEndOf="@id/stateField"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <!-- Action Buttons -->
    <Button
        android:id="@+id/addEmployerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Add Employer"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/zipField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/updateEmployerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Update Employer"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/addEmployerButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/deleteEmployerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Delete Employer"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/updateEmployerButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/getEmployersButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Get Employers"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/deleteEmployerButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Response will be shown here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/getEmployersButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/employersListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="16dp" />

    <!-- Bottom Navigation Section -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Manage Employers Icon -->
        <ImageButton
            android:id="@+id/manageEmployersIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_manage_employers"
            android:contentDescription="Manage Employers"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FF5722" />

        <!-- Main User Page Icon -->
        <ImageButton
            android:id="@+id/mainUserPageIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_company"
            android:contentDescription="Main User Page"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#333333" />

        <!-- Manage Invitations Icon -->
        <ImageButton
            android:id="@+id/manageInvitationsIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_manage_invitations"
            android:contentDescription="Manage Invitations"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#333333" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
