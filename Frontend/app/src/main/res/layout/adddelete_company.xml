<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company_user.handleEmployers.CompanyActivityApi"
    android:padding="16dp">

    <!-- Vertical Guideline for Left Margin -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical" />

    <!-- Vertical Guideline for Right Margin -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical" />

    <!-- Name Field -->
    <EditText
        android:id="@+id/nameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="16dp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/nameField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- Phone Field -->
    <EditText
        android:id="@+id/phoneField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/emailField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- Street Field -->
    <EditText
        android:id="@+id/streetField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Street"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/phoneField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- City Field -->
    <EditText
        android:id="@+id/cityField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="City"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/streetField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- State Field -->
    <EditText
        android:id="@+id/stateField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="State"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/cityField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toStartOf="@id/zipField"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Zip Code Field -->
    <EditText
        android:id="@+id/zipField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/cityField"
        app:layout_constraintStart_toEndOf="@id/stateField"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <!-- Add Employer Button -->
    <Button
        android:id="@+id/addEmployerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Add Employer"
        app:layout_constraintTop_toBottomOf="@id/zipField"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        android:layout_marginTop="16dp" />

    <!-- Update Employer Button -->
    <Button
        android:id="@+id/updateEmployerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Update Employer"
        app:layout_constraintTop_toBottomOf="@id/addEmployerButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- Delete Employer Button -->
    <Button
        android:id="@+id/deleteEmployerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Delete Employer"
        app:layout_constraintTop_toBottomOf="@id/updateEmployerButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- Get Employers Button -->
    <Button
        android:id="@+id/getEmployersButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Get Employers"
        app:layout_constraintTop_toBottomOf="@id/deleteEmployerButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        android:layout_marginTop="8dp" />

    <!-- TextView to display responses -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Response will be shown here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:background="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/getEmployersButton"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="16dp" />

    <!-- ListView to display employers -->
    <ListView
        android:id="@+id/employersListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>