<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Job Title Field -->
    <EditText
        android:id="@+id/editJobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Title"
        android:layout_marginTop="8dp" />

    <!-- Status Field -->
    <EditText
        android:id="@+id/editStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status"
        android:layout_marginTop="8dp" />

    <!-- Applied On Field -->
    <EditText
        android:id="@+id/editAppliedOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Applied On"
        android:inputType="date"
        android:layout_marginTop="8dp" />

    <!-- Accept and Reject Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="end">

        <ImageButton
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_accept"
        android:contentDescription="Accept Application"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/rejectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reject"
        android:contentDescription="Reject Application"
        android:background="?attr/selectableItemBackground"  <!-- Add this for ripple effect -->
        />
    </LinearLayout>
</LinearLayout>
