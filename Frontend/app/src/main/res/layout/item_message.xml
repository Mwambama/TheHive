<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Received message container -->
    <LinearLayout
        android:id="@+id/receivedMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_message_received"
        android:layout_gravity="start"
        android:visibility="gone">

        <!-- Received Reply TextView -->
        <TextView
            android:id="@+id/receivedReplyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replying to:"
            android:textSize="14sp"
            android:textColor="#888888"
            android:background="#e0e0e0"
            android:padding="4dp"
            android:visibility="gone" />

        <!-- Received Message TextView -->
        <TextView
            android:id="@+id/receivedMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Message"
            android:textSize="16sp" />

        <!-- Received Timestamp TextView -->
        <TextView
            android:id="@+id/receivedTimestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Sent message container -->
    <LinearLayout
        android:id="@+id/sentMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_message_sent"
        android:layout_gravity="end"
        android:visibility="gone">

        <!-- Sent Reply TextView -->
        <TextView
            android:id="@+id/sentReplyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replying to:"
            android:textSize="14sp"
            android:textColor="#888888"
            android:background="#e0e0e0"
            android:padding="4dp"
            android:visibility="gone" />

        <!-- Sent Message TextView -->
        <TextView
            android:id="@+id/sentMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent Message"
            android:textSize="16sp" />

        <!-- Sent Timestamp TextView -->
        <TextView
            android:id="@+id/sentTimestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</FrameLayout>
