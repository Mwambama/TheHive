<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Name Field -->
    <EditText
        android:id="@+id/signup_name_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Email Field -->
    <EditText
        android:id="@+id/signup_email_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/signup_name_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Phone Field -->
    <EditText
        android:id="@+id/signup_phone_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Phone"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/signup_email_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Field Field -->
    <EditText
        android:id="@+id/signup_field_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Field"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/signup_phone_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Street Field -->
    <EditText
        android:id="@+id/signup_street_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Street"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/signup_field_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Complement Field -->
    <EditText
        android:id="@+id/signup_complement_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Complement"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/signup_street_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- City Field -->
    <EditText
        android:id="@+id/signup_city_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your City"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/signup_complement_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- State Field -->
    <EditText
        android:id="@+id/signup_state_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your State"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/signup_city_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Zip Code Field -->
    <EditText
        android:id="@+id/signup_zipcode_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Zip Code"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@id/signup_state_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/update_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Info"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_zipcode_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/delete_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Info"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/update_info_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Fetch Info Button -->
    <Button
        android:id="@+id/fetch_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Info"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/delete_info_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TextView for displaying responses -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Response will be shown here"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/fetch_info_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
