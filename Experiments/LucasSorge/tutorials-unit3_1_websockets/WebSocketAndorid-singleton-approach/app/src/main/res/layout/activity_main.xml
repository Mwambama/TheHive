<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- First Chat Server (User 1) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Server URL for Chat 1 (default):" />

    <EditText
        android:id="@+id/serverEdt"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="ws://10.0.2.2:8080/chat/1/"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/unameEdt"
        android:layout_marginTop="16dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="Enter username for Chat 1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Chat 1"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Chat 1"
        android:layout_marginTop="8dp" />

    <!-- Divider between User 1 and User 2 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="24dp" />

    <!-- Second Chat Server (User 2) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server URL for Chat 2 (default):" />

    <EditText
        android:id="@+id/serverEdt2"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="ws://10.0.2.2:8080/chat/2/"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/unameEdt2"
        android:layout_marginTop="16dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="Enter username for Chat 2"
        android:textSize="16sp" />

    <Button
        android:id="@+id/connectBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Chat 2"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/backBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Chat 2"
        android:layout_marginTop="8dp" />

    <!-- Divider between individual chats and shared chat -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="24dp" />


</androidx.appcompat.widget.LinearLayoutCompat>
